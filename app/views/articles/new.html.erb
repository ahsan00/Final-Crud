<h2>Create an Article Now!!!</h2>
<%if @nnn.errors.any? %>
  <ul>
    <% @articles.errors.full_message.each do|msg| %>
      <li> <%= msg %>></li>
    <%end %>>
  </ul>

  <%end %>
<%=form_for @nnn do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<%end %>